---
import { client } from '../lib/sanityClient';
import groq from 'groq';

const query = groq`*[_type == "settings"][0] {
  mainNav[] {
    title,
    url,
    barColor
  }
}`;

const settings = await client.fetch(query);
const navItems = settings.mainNav;
---

<nav class="main-nav">
  {navItems && navItems.map((item) => (
    <a href={item.url} class="nav-item" style={`background-color: ${item.barColor};`}>
      <span class="nav-text">{item.title}</span>
    </a>
  ))}
</nav>

<style>
  /* --- STYLES REMAIN EXACTLY THE SAME --- */
  .main-nav {
    position: fixed;
    top: 0;
    right: 0;
    height: 100vh;
    display: flex;
    z-index: 1000;
  }

  .nav-item {
    position: relative;
    overflow: hidden;
    width: 40px;
    height: 100%;
    cursor: pointer;
    text-decoration: none;
    transition: width 0.4s cubic-bezier(0.23, 1, 0.32, 1);
  }

  .nav-item:hover {
    width: 90px;
  }

  .nav-text {
    position: absolute;
    bottom: 0.5rem;
    left: 2rem;
    transform-origin: bottom left;
    transform: rotate(-90deg);
    
    color: var(--background);
    font-size: 1.5rem;
    font-weight: bold;
    text-transform: uppercase;
    white-space: nowrap;
  }
</style>